<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/layout_more"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MoreActivity" >

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:text="Username"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvUsernameView"
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvHelpCenter"
        android:layout_alignParentRight="true"
        android:layout_margin="10sp"
        android:text="Sok Dara"
        android:textStyle="bold" />
    
    
    <ImageView
    android:layout_width="fill_parent"
    android:layout_height="2dp"
    android:adjustViewBounds="true"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/tvUsername"
    android:contentDescription=""
    android:src="@drawable/img_line" />

    <TextView
        android:id="@+id/tvHelpCenter"
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvUsername"
        android:layout_margin="10sp"
        android:clickable="true"
        android:focusable="false"
        android:onClick="btnHelpCenter"
        android:text="Help Center" />
    
    <ImageView
    android:layout_width="fill_parent"
    android:layout_height="2dp"
    android:adjustViewBounds="true"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/tvHelpCenter"
    android:contentDescription=""
    android:src="@drawable/img_line" />
  
    <TextView
        android:id="@+id/tvLogout"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvHelpCenter"
        android:layout_margin="10sp"
        android:focusable="false"
        android:layout_marginTop="126dp"
        android:text="Logout" />
    
   
    
    <ImageView
    android:layout_width="fill_parent"
    android:layout_height="2dp"
    android:adjustViewBounds="true"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/tvLogout"
    android:contentDescription=""
    android:src="@drawable/img_line" />

</RelativeLayout>
